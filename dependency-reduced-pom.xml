<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.sita9</groupId>
  <artifactId>Sita9Automation</artifactId>
  <name>Sita9 Registration Automation</name>
  <version>1.0-SNAPSHOT</version>
  <description>Automated account registration with proxy rotation</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>17</source>
          <target>17</target>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>3.2.5</version>
        <configuration>
          <skipTests>${skipTests}</skipTests>
          <systemPropertyVariables>
            <webdriver.chrome.driver>/dev/null</webdriver.chrome.driver>
            <webdriver.chrome.silentOutput>true</webdriver.chrome.silentOutput>
            <webdriver.chrome.logfile>/dev/null</webdriver.chrome.logfile>
          </systemPropertyVariables>
          <skipAfterFailureCount>100</skipAfterFailureCount>
          <parallel>none</parallel>
          <threadCount>1</threadCount>
          <includes>
            <include>**/*Test.java</include>
          </includes>
          <forkCount>1</forkCount>
          <reuseForks>false</reuseForks>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-report-plugin</artifactId>
        <version>3.2.5</version>
      </plugin>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>3.3.0</version>
        <configuration>
          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <mainClass>org.Sita9RegistrationTest</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.Sita9RegistrationTest</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>headless</id>
      <properties>
        <headless.arg>--headless=new --disable-gpu --window-size=1920,1080</headless.arg>
      </properties>
    </profile>
    <profile>
      <id>proxies</id>
      <properties>
        <proxies.sample>127.0.0.1:8080,127.0.0.1:3128</proxies.sample>
      </properties>
    </profile>
  </profiles>
  <properties>
    <webdrivermanager.version>5.6.2</webdrivermanager.version>
    <maven.compiler.target>17</maven.compiler.target>
    <selenium.version>4.17.0</selenium.version>
    <testng.version>7.8.0</testng.version>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <skipTests>true</skipTests>
  </properties>
</project>
